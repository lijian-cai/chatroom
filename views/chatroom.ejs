<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./css/chatroom.css">
  <title>Chatroom</title>
</head>
<body>
  <div class="container">
    <div class="wechat-container">
      <div class="side-nav">
        <div class="own-avatar avatar"></div>
      </div>
      <div class="user-list">
        <div class="user-search">
          <input type="text" name="search" id="search" placeholder="Search Member..." autocomplete="off">
        </div>
      </div>
      
      <div class="chat-container">
        <div class="chat-head">
          <span>All Members</span>
        </div>
        <div class="chat-body">

        </div>
        <div class="chat-footer">
          <form action="">
            <textarea type="text" name="messagebox" id="messagebox"></textarea>
            <button type="submit" id="submit">Send</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/jquery.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    $(function () {
      var socket = io();
      var username = `<%= name %>`;
      $('form').submit(function(e){
        e.preventDefault(); // prevents page reloading
        socket.emit('chat message', username, $('#messagebox').val());
        $('#messagebox').val('');
        return false;
      });
      // $('#messagebox').keypress(e => {
      //   if(e.which == 13){
      //     $('#submit').focus().click();
      //   }
      // });
      let chatBody = $('.chat-body');
      let messageBox = $('#messagebox');
      socket.on('chat message', function(sendername, msg){
        if(sendername == username){
          chatBody.append(
             // right
             `<div class="sender">
                <div>
                  <img src="chatTemplateExample2_files/cat.jpg">
                </div>
                <div>
                  <div class="left_triangle"></div>
                  <pre>${msg}</pre>
                </div>
              </div>`.trim()
          )
        }else{
          chatBody.append(
            // left
             `<div class="receiver">
                <div>
                  <img src="chatTemplateExample2_files/cat.jpg">
                </div>
                <div>
                  <div class="right_triangle"></div>
                  <pre>${msg}</pre>
                </div>
              </div>`.trim()
          )
        }
        /* auto scroll to bottom */
        chatBody.scrollTop(chatBody[0].scrollHeight)
        // messageBox.on('mouseover', function(){
        //   $('.chat-footer').css("background-color", "white");
        // })
      });
    });
    const scale = window.screen.width / 750
    document.write(`<meta name="viewport" content="initial-scale=${scale}">`)
  </script>
</body>
</html>